Proceso Procesos_Secuenciales_20
    // Bosquejo:
    // 1. Pedir metros.
    // 2. Mostrar metros * 100.
    
    Definir metros, cm Como Real;
    Escribir "Ingresa la distancia en metros:";
    Leer metros;
    cm <- metros * 100;
    Escribir "Centímetros: ", cm;
FinProceso